<%- include('../layout/header') %>



<button onclick="topFunction()" id="myBtn" title="Go to top">
<i class="fas fa-arrow-up"></i>
</button>

<main class="container-main">
<!-- DESKTOP -->
<!-- DESKTOP -->
<div class="wrapper">
  
  <div class="komik">
    <%- include('../layout/slider') %>
    <br>
    <h3 class="title" >Popular Terbaru</h3>
    <div class="komik-list">
      <% body.recent_popular.forEach(a=> { %>
    <div class="komik-box">
      <a class="see-detail" href="#" data-toggle="modal"
          data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
          data-target="#exampleModal">
          <div>
            <img src="<%= a.thumb %>?w=136,h=245">
            <div class="ket">
              <h2><%= a.name %></h2>
              <span class="badge" >
                <i class="fa-solid fa-rotate"></i> <%= a.last_upload %>
              </span>
            </div>
          </div>
        </a>
    </div>
    <% }) %>
    </div>
  </div>
<br>
  <div class="komik">
    <h3 class="title" >Komik berwarna Terbaru</h3>
    <div class="komik-list">
      <% body.colored_komik.forEach(a=> { %>
    <div class="komik-box">
      <a class="see-detail" href="#" data-toggle="modal"
          data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
          data-target="#exampleModal">
          <div>
            <img src="<%= a.thumb %>?w=136,h=245">
            <div class="ket">
              <h2><%= a.name %></h2>
              <span class="badge" >
                <i class="fa-solid fa-rotate"></i> <%= a.last_upload %>
              </span>
            </div>
          </div>
        </a>
    </div>
    <% }) %>
    </div>
  </div>
</div>
<!-- DESKTOP -->
<!-- DESKTOP -->




<!-- MOBILE -->
<!-- DESKTOP HIDDEN -->
<div class="hidden-new">
  <%- include('../layout/slider') %>
  <div class="card-items-body" >
    <h2 class="title">Popular Terbaru</h2>
    <% body.recent_popular.forEach(a=> { %>
      <div class="card-items">
        <img src="<%= a.thumb %>?w=66,h=75" alt="">
        <a class="boxes see-detail" href="#" data-toggle="modal"
        data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
        data-target="#exampleModal">
           <p class="text-overflow">
              <%= a.name %> <br>
              <span class="badge" >
                <i class="fa-solid fa-rotate"></i> <%= a.last_upload %>
              </span>
            </p>
        </a>
      </div>
      <% }) %>
      <h2 class="title">Komik Berwarna Terbaru</h2>
      <% body.colored_komik.forEach(a=> { %>
        <div class="card-items">
          <img src="<%= a.thumb %>?w=66,h=75" alt="">
          <a class="boxes see-detail" href="#" data-toggle="modal"
          data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
          data-target="#exampleModal">
          <p class="text-overflow">
            <%= a.name %> <br>
            <span class="badge" >
              <i class="fa-solid fa-rotate"></i> <%= a.last_upload %>
            </span>
          </p>
        </a>
        </div>
      <% }) %>
  </div>
</div>
<!-- MOBILE -->
<!-- MOBILE -->

<!-- SIDEBAR -->
<!-- SIDEBAR -->
<br>
<div class="sidebar" >
  <h2 class="title"><i class="fa-solid fa-star"></i> Popular</h2>
  <% sidebar.popular.forEach(a=> { %>
    <div class="card-items">
      <img src="<%= a.thumb %>?w=66,h=75"" alt="">
  <a class="boxes see-detail" href="#" data-toggle="modal"
        data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
        data-target="#exampleModal">
        
        <p class="text-overflow">
          <%= a.name %> <br>
          <i class="fa-solid fa-star"></i> <%= a.score %>
        </p>
        </a>
        
      </div>
      <hr>
    <% }) %>

    <h2 class="title"><i class="fa-solid fa-sparkles"></i> New Publish</h2>
    <% sidebar.new_komik.forEach(a=> { %>
      <div class="card-items">
        <img src="<%= a.thumb %>?w=66,h=75" alt="">
        <a class="boxes see-detail" href="#" data-toggle="modal"
        data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
        data-target="#exampleModal">
        <p class="text-overflow">
          <%= a.name %> <br>
          <i class="fa-solid fa-star"></i> <%= a.score %>
        </p>
        </a>
        </div>
        <hr>
      <% }) %>

</div>


<!-- SIDEBAR -->
<!-- SIDEBAR -->
</main>



<%- include('../layout/footer') %>
