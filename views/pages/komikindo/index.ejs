<%- include('../../layout/header') %>

    <h3>Popular</h3>
    <div class="produk-list">
      <% body.recent_popular.forEach(a=> { %>
    <div class="produk-box">
      <a class="see-detail" href="#" data-toggle="modal"
          data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
          data-target="#exampleModal">
          <div>
            <img src="<%= a.thumb %>" >
            <div class="ket">
              <h2><%= a.name %></h2>
              <h3></h3>
            </div>
          </div>
        </a>
    </div>
    <% }) %>
    </div>

    <h3>Baru Rilis</h3>
    <div class="produk-list">
      <% body.new_update.forEach(a=> { %>
    <div class="produk-box">
      <a class="see-detail" href="#" data-toggle="modal"
          data-source="komikindo" data-endpoint=<%=a.link.endpoint %>
          data-target="#exampleModal">
          <div>
            <img src="<%= a.thumb %>" >
            <div class="ket">
              <h2><%= a.name %></h2>
              <h3><%= a.description %></h3>
            </div>
          </div>
        </a>
    </div>
    <% }) %>
    </div>

