<%- include('../../layout/header') %>

    <div class="row mt-4 justify-content-center">
        <h2 class="text-justify">
            <%= chapter_name %>
        </h2>
    </div>
    <script>
        document.title = "<%= chapter_name %>";
    </script>

    <div class="row">
        <div class="col-sm-12">
            <div class="row flex justify-content-right">
                <div class="btn-group btn-group-toggle btn-group-lg btn-block">
                    <% if (chapter.previous !=null) { %>
                        <a href='/id/chapter<%=chapter.previous%>' class='btn btn-outline-secondary'>Previous</a>
                        <% } else { %>
                            <a href='#' class='btn btn-outline-secondary disabled'>Previous</a>
                            <%}%>

                                <% if (chapter.next !=null) { %>
                                    <a href='/id/chapter<%=chapter.next%>'
                                        class='btn btn-outline-secondary'>Next</a>
                                    <% } else { %>
                                        <a href='#' class='btn btn-outline-secondary disabled'>Next</a>
                                        <%}%>
                </div>
            </div>
        </div>
    </div>

    <hr>
    <div class="row mt-4 justify-content-center">
        <% chapter_images.forEach(a=> { %>
            <img src='<%= a %>' class='img-fluid' alt='Responsive image'>
            <% }) %>
    </div>

    <div class="row mt-4">
        <div class="col-sm-12">
            <div class="row flex justify-content-center">
                <div class="btn-group btn-group-toggle btn-group-lg btn-block">
                    <% if (chapter.previous !=null) { %>
                        <a href='/id/chapter<%=chapter.previous%>' class='btn btn-outline-secondary'>Previous</a>
                        <% } else { %>
                            <a href='#' class='btn btn-outline-secondary disabled'>Previous</a>
                            <%}%>

                                <% if (chapter.next !=null) { %>
                                    <a href='/id/chapter<%=chapter.next%>'
                                        class='btn btn-outline-secondary'>Next</a>
                                    <% } else { %>
                                        <a href='#' class='btn btn-outline-secondary disabled'>Next</a>
                                        <%}%>
                </div>
            </div>
        </div>
    </div>


    <br/>

    <button type="button" class="btn btn-dark btn-floating btn-sm-4 fixed-bottom" id="btn-back-to-top">
    <i class="fas fa-arrow-up"></i>
    </button>

    </div>
      </body>
      </html>
