<nav class="navbar fixed-top">
    <div class="justify-content-center">
        <small class="text-center">
            <%= chapter_name %>
        </small>
    </div>
    
</nav>


  <nav class="text-center navbar navs fixed-bottom">
    <a href="/">
        <div class="btnn" >
            <i class="fa-solid fa-angles-left"></i>
        </div>
      </a>
    <a onclick="topFunction()" id="myBtn" title="Go to top"><i class="fa-solid fa-arrow-up"></i></a>

    <% if (chapter.previous !=null) { %>
        <a href='/chapter<%=chapter.previous%>' class=''>
            <div class="btnn" >
                <i class="fa-solid fa-angle-left"></i>
            </div>
        </a>
    <% } else { %>
        <a href='#' class='btn disabled'><i class="fa-solid fa-angle-left"></i></a>
    <%}%>
    
    <% if (chapter.next !=null) { %>
        <a href='/chapter<%=chapter.next%>' class=''>
            <div class="btnn" >
                <i class="fa-solid fa-angle-right"></i>
            </div>
        </a> 
    <% } else { %>
        <a href='#' class='btn disabled'><i class="fa-solid fa-angle-right"></i></a>
    <%}%>

      

    <div id=theme>
      <div onclick=setDarkMode(true) id=darkBtn>
          <i class="fa-solid fa-moon"></i>
      </div>
      <div onclick=setDarkMode(false) id=lightBtn class=is-hidden>
          <i class="fa-solid fa-sun"></i>
      </div>
  </div>

  </nav>


